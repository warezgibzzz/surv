{% extends 'base.html.twig' %}

{% block title %}Результаты теста{% endblock %}

{% block body %}

    <div class="col-12">
        <h1>{{ result.survey.name }} &mdash; {{ result.participant.email }}</h1>

        {% for response in result.data %}
            <div class="card mb-2">
                <div class="card-body">
                    <h2 class="card-title">{{ loop.index }}: {{ response.question }}</h2>
                    <p class="card-text">{{ response.answer }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
